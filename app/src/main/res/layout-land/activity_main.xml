<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3839"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/zInfoDeck"
        android:layout_width="374dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Cards"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TextBaraja"
            android:layout_width="298dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:background="@color/bone"
            android:gravity="center_horizontal|center_vertical"
            android:text="Cards in Deck       "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nDeck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/bone"
            android:gravity="center_horizontal|center_vertical"
            android:text="78"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Cards"
        android:layout_width="255dp"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/zCardTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/Card1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="#CCB382"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tile011" />

            <ImageView
                android:id="@+id/Card2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="#CCB382"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tile011" />

            <ImageView
                android:id="@+id/Card3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="#CCB382"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tile011" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/zCardBot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Card4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imagen1" />

            <ImageView
                android:id="@+id/Card5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imagen2" />

            <ImageView
                android:id="@+id/Card6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="#AFA7A7"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imagen3" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/zInfoDeck"
        app:layout_constraintEnd_toStartOf="@+id/Cards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zObj">

        <Button
            android:id="@+id/restart"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_2sdp"
            android:background="#939390"

            android:backgroundTint="#59574C"
            android:backgroundTintMode="src_atop"
            android:text="Restart"
            android:theme="@style/Button.bone" />

        <Button
            android:id="@+id/draw"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="79dp"
            android:layout_height="65dp"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/circle_button"
            android:backgroundTint="#59574C"
            android:backgroundTintMode="src_atop"
            android:text="Draw"
            android:theme="@style/Button.bone" />

        <Button
            android:id="@+id/back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="#939390"
            android:backgroundTint="#59574C"
            android:backgroundTintMode="src_atop"
            android:text="Back"
            android:theme="@style/Button.bone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zObj"
        android:layout_width="0dp"

        android:layout_height="168dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/Cards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Obj1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/obj1_1" />

        <ImageView
            android:id="@+id/Obj2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/obj2_1" />

        <ImageView
            android:id="@+id/Obj3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/obj3_1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>